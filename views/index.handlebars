<div class="row mt-5">
  <div class="col-md-9 m-auto">
    <div class="form-group row d-flex justify-content-center my-5">
      <div class="col-sm-8">
        <form action="/filter" method="POST">
          <select name="category" id="category" class="form-select form-select-lg" aria-label="Default select example"
            onchange="this.form.submit();">
            {{#if selectedCategory}}
            <option value="{{selectedCategory}}">{{selectedCategory}}</option>
            {{else}}
            <option selected>篩選類別</option>
            {{/if}}
            <option value="家居物業">家居物業</option>
            <option value="交通出行">交通出行</option>
            <option value="休閒娛樂">休閒娛樂</option>
            <option value="餐飲食品">餐飲食品</option>
            <option value="其他">其他</option>
          </select>
        </form>
      </div>
    </div>
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item">
        <div class="row d-flex align-items-center">
          <div class="col-2">
            <i class="{{ this.categoryId.icon }} fa-3x" style="color: #5e77f3;"></i>
          </div>
          <div class="col-6">
            <p class="h3">{{this.name}}</p>
            <p class="h5">{{this.date}}</p>
          </div>
          <div class="col-2">
            <span class="h3">{{this.amount}}</span>
          </div>
          <div class="col-2">
            <a class="btn btn-success" href="./records/{{this._id}}/edit">修改</a>
            <form action="/records/{{this._id}}/delete" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger text-white">刪除</button>
          </div>
          </form>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>