<div class="d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-7 m-auto">
        <div class="card card-body">
          <h1 class="text-center p-3">註冊</h1>
          {{> message}}
          <form action="/users/register" method="POST">
            <div class="my-3 p-3">
              <label for="name" class="lead mb-2">稱呼:</label>
              <input type="text" id="name" name="name" class="form-control" placeholder="請輸入稱呼自己的名字" value="{{name}}">
            </div>
            <div class="my-3 p-3">
              <label for="email" class="lead mb-2">電子信箱 (必填):</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email" value="{{email}}">
            </div>
            <div class="my-3 p-3">
              <label for="password" class="lead mb-2">密碼 (必填):</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
                value="{{password}}">
            </div>
            <div class="my-3 p-3">
              <label for="confirmPassword" class="lead mb-2">確認密碼 (必填):</label>
              <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                placeholder="請再次輸入密碼" value="{{confirmPassword}}">
            </div>
            <div class="d-grid gap-4 col-8 mx-auto p-3">
              <button type="submit" class="btn btn-primary btn-block">註冊</button>
              <a href="/auth/facebook" class="btn btn-info btn-block">Facebook 登入</a>
            </div>
          </form>
          <p class="lead mt-3 p-3">
            已經有帳號? <a href="/users/login">登入</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>