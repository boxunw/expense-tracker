<div class="d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-7 m-auto">
        <div class="card card-body">
          <h1 class="text-center p-3">Register</h1>
          <form action="/users/register" method="POST">
            <div class="my-3 p-3">
              <label for="name" class="mb-2">Name</label>
              <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{name}}">
            </div>
            <div class="my-3 p-3">
              <label for="email" class="mb-2">Email (必填)</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                value="{{email}}">
            </div>
            <div class="my-3 p-3">
              <label for="password" class="mb-2">Password (必填)</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
                value="{{password}}">
            </div>
            <div class="my-3 p-3">
              <label for="confirmPassword" class="mb-2">Confirm Password (必填)</label>
              <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                placeholder="Confirm Password" value="{{confirmPassword}}">
            </div>
            <div class="d-grid gap-4 col-8 mx-auto p-3">
              <button type="submit" class="btn btn-primary btn-block">Register</button>
              <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
            </div>
          </form>
          <p class="lead mt-3 p-3">
            Have An Account? <a href="/users/login">Login</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>