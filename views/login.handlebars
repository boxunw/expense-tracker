<div class="d-flex justify-content-center align-items-center">
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-7 m-auto">
        <div class="card card-body">
          <h1 class="text-center p-3">登入</h1>
          {{> message}}
          <form action="/users/login" method="POST">
            <div class="my-3 p-3">
              <label for="email" class="lead mb-2">電子信箱:</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="請輸入Email">
            </div>
            <div class="my-3 p-3">
              <label for="password" class="lead mb-2">密碼:</label>
              <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼">
            </div>
            <div class="d-grid gap-4 col-8 mx-auto p-3">
              <button type="submit" class="btn btn-primary btn-block">登入</button>
              <a href="/auth/facebook" class="btn btn-info btn-block">Facebook 登入</a>
            </div>
          </form>
          <p class="lead mt-3 p-3">
            沒有帳號 ? <a href="/users/register">註冊</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>